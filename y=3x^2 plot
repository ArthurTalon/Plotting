import numpy as np
import matplotlib.pyplot as plt

#Plot the function y = 3x^2 for −1 ≤ x ≤ 3 as a continuous line. Include enough points so that the curve you plot appears smooth. Label the axes x and y.

x = np.array(np.linspace(-1,3,120))
y =  3*np.power(x,2)
plt.figure(1, figsize=(6,4))
plt.plot(x,y)
plt.xlabel('X')
plt.ylabel('Y')
plt.show()
